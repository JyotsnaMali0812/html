            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }

        /* Additional Styles for Consistency */
        .container form {
            margin-bottom: 30px;
        }

        /* Responsive Design */
